#include <stdio.h>

#define MAX_SIZE 100

char stack[MAX_SIZE];
int top = -1;

int main() {
    char notation[MAX_SIZE];
    printf("Enter a notation: ");
    scanf("%s", notation);

    for (int i = 0; notation[i] != '\0'; i++) {
        if (notation[i] == '(' || notation[i] == '[' || notation[i] == '{') {
            top++;
            stack[top] = notation[i];
        } else if (notation[i] == ')' || notation[i] == ']' || notation[i] == '}') {
            if (top == -1) {
                printf("Notation is not balanced\n");
                return 0;
            } else if ((notation[i] == ')' && stack[top] == '(') ||
                       (notation[i] == ']' && stack[top] == '[') ||
                       (notation[i] == '}' && stack[top] == '{')) {
                top--;
            } else {
                printf("Notation is not balanced\n");
                return 0;
            }
        }
    }

    if (top == -1) {
        printf("Notation is balanced\n");
    } else {
        printf("Notation is not balanced\n");
    }

    return 0;
}
